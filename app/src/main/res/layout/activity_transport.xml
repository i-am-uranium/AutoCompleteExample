<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/app_bar"
        layout="@layout/action_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/transport"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/transport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:focusable="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/road"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/road" />

                <RadioButton
                    android:id="@+id/rail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/rail" />

                <RadioButton
                    android:id="@+id/air"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/air" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/charter_or_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/charter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/chartered" />

                <RadioButton
                    android:id="@+id/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/regular" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.4"
                    android:text="@string/from"
                    android:textColor="@color/primary_text" />

                <AutoCompleteTextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.6"
                    android:background="@drawable/textview_background"
                    android:hint="@string/from" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.4"
                    android:text="@string/to"
                    android:textColor="@color/primary_text" />

                <AutoCompleteTextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.6"
                    android:background="@drawable/textview_background"
                    android:hint="@string/to" />

            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/custom_bg"
                android:onClick="nextButtonClick"
                android:shadowColor="@color/icons"
                android:shadowRadius="2"
                android:text="@string/next" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/error"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/refresh"
            android:gravity="center" />

        <Button
            android:id="@+id/dialus1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_bg" />

        <Button
            android:id="@+id/dialus2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_bg" />
    </LinearLayout>
</LinearLayout>